<h5><body>
<style type="text/css">
    TABLE {
        border-collapse: collapse; /* Убираем двойные линии между ячейками */

    }
    TH {

        text-align: left; /* Выравнивание по левому краю */
    }
    TD {
        background: #fff; /* Цвет фона ячеек */
        text-align: center; /* Выравнивание по центру */
    }
    TH, TD {
        /* Параметры рамки */
        /* Поля вокруг текста */
        width: 300px;
    }

</style>
<script type="text/javascript">
    (function() {
        var blinks = document.getElementsByTagName('blink');
        var visibility = 'hidden';
        window.setInterval(function() {
            for (var i = blinks.length - 1; i >= 0; i--) {
                blinks[i].style.visibility = visibility;
            }
            visibility =  'hidden' ;
        }, 2000);
    })();
</script>
<blink>{{message}} </blink>

{{#if resultNotEmpty}}
    <table class="highlight" >
        <p><th>Название товара</th><td>Описание</td> <td>Цена</td> </p>
        {{#each rows}}
            <tr>
                <th><a href="/goods/{{good_id}}">{{name}}</a></th><td>{{description}}</td><td>{{price}} руб.</td><td><a href="/goods/{{good_id}}"><img src="/{{image_url}}" width="125"></a></td>
                <td hidden>{{../userId}}</td>
                {{#if ../userId}}
                    <th>{{> form_add_in_cart }}</th>
                {{/if}}
                {{#if ../adminId}}
                    <th>{{> form_delete_good }}</th>
                {{/if}}
            </tr>
        {{/each}}
    </table>
{{else}}
    <p>Нет данных</p>
{{/if}}
</body></h5>
<br>
