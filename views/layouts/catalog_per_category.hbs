<h5><body>
<script type="text/javascript">
    (function() {
        var blinks = document.getElementsByTagName('blink');
        var visibility = 'hidden';
        window.setInterval(function() {
            for (var i = blinks.length - 1; i >= 0; i--) {
                blinks[i].style.visibility = visibility;
            }
            visibility =  'hidden' ;
        }, 2000);
    })();
</script>
<blink>{{message}} </blink>

{{#if resultNotEmpty}}
    <table class="highlight" >
        <td>Название товара</td><td>Описание</td> <td>Цена</td> <td> </td>
        {{#each rows}}
            <tr>
                <td><a href="/goods/{{good_id}}">{{name}}</a></td><td>{{description}}</td><td>{{price}} руб.</td><td><img src="/{{image_url}}" width="125"></td><td hidden>{{../userId}}</td>
                {{#if ../userId}}
                    <td>{{> form_add_in_cart }}</td>
                {{/if}}
            </tr>
        {{/each}}
    </table>
{{else}}
    <p>Нет данных</p>
{{/if}}
</body></h5>
<br>
