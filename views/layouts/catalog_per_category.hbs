<h5><body>
<p align="center"> {{message}}  </p>
{{#if resultNotEmpty}}
    <table class="highlight" >
        <td>Название товара</td><td>Описание</td> <td>Цена</td> <td> </td>
        {{#each rows}}
            <tr>
                <td>{{name}}</td><td>{{description}}</td><td>{{price}} руб.</td><td><img src="/{{image_url}}" width="125"></td>
                {{#if ../userId}}
                    <td><form action="/book_good" method="post">
                        <input  name="goodId" value="{{goodid}}" hidden/>
                        <input  name="category_id" value="{{category_id}}" hidden/>
                        <input  name="name" value="{{name}}" hidden/>
                        <input  name="userId" value="{{../userId}}"  hidden/>
                        <div>
                            {{#if in_stock}}<a class="waves-effect waves-light btn-small">
                                <input type="submit" value="В корзину"/>
                            </a>
                            {{else}}
                                <input type="submit" value="Нет в наличие" disabled/>
                            {{/if}}
                        </div>
                    </form></td>
                {{/if}}
            </tr>
        {{/each}}
    </table>
{{else}}
    <p>Нет данных</p>
{{/if}}
</body></h5>
<br>
