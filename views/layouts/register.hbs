

<script type="text/javascript">
    (function() {
        var blinks = document.getElementsByTagName('blink');
        var visibility = 'hidden';
        window.setInterval(function() {
            for (var i = blinks.length - 1; i >= 0; i--) {
                blinks[i].style.visibility = visibility;
            }
            visibility =  'hidden' ;
        }, 2000);
    })();
    function ValidMail() {
        var re = /^[\w-\.]+@[\w-]+\.[a-z]{2,4}$/i;
        var myMail = document.getElementById('email').value;
        var valid = re.test(myMail);
        if (valid) output = null;
        else output = 'Адрес электронной почты введен неправильно!';
        document.getElementById('reg_message').innerHTML = output;
        return output;
    }
</script>
<blink>{{message}} </blink>
<blink>{{message_registration}}</blink>

<form action="/register" method="post" onsubmit="return ValidMail()">
    <div>
        <p id="reg_message" >Пожалуйста, заполните все поля формы!</p>
        <p><label>Почтовый ящик</label>
            <input required id="email" type="email" name="email"   placeholder="example@mail.com">
        </p>
        <p><label>Ваше имя:</label>
            <input required type="text" name="username"  placeholder="Имя" >
        </p>
        <p><label>Ваша фамилия:</label>
            <input type="text" name="last_name"  placeholder="Фамилия">
        </p>
        <p><label>Пароль:</label>
            <input required type="password" name="password"  placeholder="*******">
        </p>
        <p><label>Номер телефона:</label>
            <input required type="tel" name="phone_num"   placeholder="+79998882233" pattern="+7[0-9]{3}-[0-9]{3}-[0-9]{4}">
        </p>
        <p><a class="waves-effect waves-light btn-small">
            <input  type="submit" value="Зарегистрироваться"/> </a>
        </p>
    </div>
</form>
