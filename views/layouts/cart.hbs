<h5>
    <body>
    <script type="text/javascript">
        (function () {
            var blinks = document.getElementsByTagName('blink');
            var visibility = 'hidden';
            window.setInterval(function () {
                for (var i = blinks.length - 1; i >= 0; i--) {
                    blinks[i].style.visibility = visibility;
                }
                visibility = 'hidden';
            }, 5000);
        })();
    </script>
    <blink>{{message}} </blink>

    {{#if resultNotEmpty}}
        <table class="highlight">
            <p>Заказаные товары</p>
            <td>Наименование товара</td>
            <td> Стоимость товара</td>
            <td></td>
            {{#each rows}}
                <tr>
                    <td>{{good_name}}</td>
                    <td>{{price}} руб.</td>
                    <td>
                        <form action="/cart" method="post">
                            <input name="good_name" value="{{good_name}}" hidden/>
                            <input name="good_id" value="{{good_id}}" hidden/>
                            <a class="waves-effect waves-light btn-small">
                                <input type="submit" value="Убрать из корзины"/>
                            </a>
                        </form>
                    </td>

                </tr>
            {{/each}}
        </table>
    {{else}}
        <p>В корзине пусто</p>
    {{/if}}

    <form action="/order" method="get">
        <p> Общая сумма заказа: {{total}} руб.</p>
        <button type="submit" class="btn btn-primary" >Перейти к оформлению заказа.
    </form>


    </body>
</h5>
<br>
